<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <properties>
        <property name="file_path">/home/tomcat/log/feed/normal</property>
        <property name="error_rolling_file_path">/home/tomcat/log/feed/fatal</property>
        <property name="RBI_fatal_rolling_file_path">/home/tomcat/feed/RBI/fatal</property>
        <property name="RBI_crash_rolling_file_path">/home/tomcat/feed/RBI/crash</property>
        <property name="IPDOMAIN_rolling_file_path">/home/tomcat/feed/ssp/ipdomain</property>
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="ACCEPT" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
        </Console>
        <File name="File" filename="${file_path}/logCurr">
            <Filters>
                <MarkerFilter marker="BidLog" onMatch="ACCEPT" onMismatch="DENY" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
        </File>
        <RollingFile name="RBIFatalRolling" filename="${RBI_fatal_rolling_file_path}/logCurr.log" filePattern="${RBI_fatal_rolling_file_path}/%d{yy_MM_dd}.log">
            <Filters>
                <MarkerFilter marker="SdkFatalLog" onMatch="ACCEPT" onMismatch="DENY" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        <RollingFile name="IpDomainRolling" filename="${IPDOMAIN_rolling_file_path}/logCurr.log" filePattern="${IPDOMAIN_rolling_file_path}/%d{yy_MM_dd}.log">
            <Filters>
                <MarkerFilter marker="IpDomainLog" onMatch="ACCEPT" onMismatch="DENY" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        <RollingFile name="RBICrashRolling" filename="${RBI_crash_rolling_file_path}/logCurr.log" filePattern="${RBI_crash_rolling_file_path}/%d{yy_MM_dd}.log">
            <Filters>
                <MarkerFilter marker="SdkCrashLog" onMatch="ACCEPT" onMismatch="DENY" />
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        <RollingFile name="ErrorRolling" filename="${error_rolling_file_path}/logCurr.log" filePattern="${error_rolling_file_path}/%d{yy_MM_dd_HH}.log">
            <Filters>
                <ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="NEUTRAL" /> 
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
            </Filters>
            <PatternLayout pattern="[ %d{yyyy-MM-dd'T'HH:mm:ss'+08:00'} ] %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="File" />
            <!-- AppenderRef ref="Console" / -->
            <AppenderRef ref="RBIFatalRolling" />
            <AppenderRef ref="RBICrashRolling" />
            <AppenderRef ref="ErrorRolling" />
            <AppenderRef ref="IpDomainRolling" />
        </Root>
    </Loggers>
</Configuration>